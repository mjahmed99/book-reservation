@model Book_Reservation.Models.Review

@{
    ViewData["Title"] = "Edit Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <h2>Edit Your Review</h2>

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Rating (1-5)</label>
            <input asp-for="Rating" class="form-control" min="1" max="5" type="number" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Comment" class="form-label">Comment</label>
            <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Review</button>
        <a asp-action="MyReviews" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
