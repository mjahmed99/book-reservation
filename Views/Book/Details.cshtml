@model Book_Reservation.Models.Book

@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">@Model.Title</h2>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Title" />
        </div>
        <div class="col-md-8">
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>Edition:</strong> @Model.Edition</p>
            <p><strong>Year:</strong> @Model.Year</p>
            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Publisher:</strong> @Model.Publisher</p>
            <p><strong>ISBN:</strong> @Model.ISBN</p>
            <p><strong>Pages:</strong> @Model.Pages</p>
            
            @* <p><strong>Price:</strong> $@Model.Price</p> *@
            @* @if (Model.Featured)
            {
                <p><strong>Rating:</strong> ⭐⭐⭐⭐⭐</p>
            } *@

            <div class="mt-4">
                <a asp-action="Dashboard" class="btn btn-secondary">Back</a>
                <form asp-action="CancelReservation" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">Cancel Reservation</button>
                </form>
            </div>
        </div>
    </div>
</div>
